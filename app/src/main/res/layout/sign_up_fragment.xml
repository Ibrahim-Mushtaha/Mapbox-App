<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SignUp_Fragment">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:padding="12dp">
    <TextView
        android:id="@+id/txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Registration"
        android:textSize="32dp"
        android:layout_marginBottom="64dp"
        android:textStyle="bold"
        android:layout_centerHorizontal="true"
        android:textColor="@color/colorPrimary"/>

    <EditText
        android:id="@+id/etxt_email"
        android:layout_below="@id/txt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:maxLines="1"
        android:inputType="textEmailAddress"
        android:imeOptions="actionNext"
        android:hint="Enter your email"
        android:layout_margin="16dp"/>


    <EditText
        android:id="@+id/etxt_name"
        android:layout_below="@id/etxt_email"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:maxLines="1"
        android:imeOptions="actionDone"
        android:hint="Enter your name"
        android:layout_margin="16dp"/>


    <Button
        android:id="@+id/btn_create"
        android:layout_below="@id/etxt_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Create Now"
        android:layout_margin="@dimen/mapbox_internalMinSpan24"
        android:background="@drawable/shape"
        android:textColor="@android:color/white"/>


        <TextView
            android:id="@+id/btn_have_anAccount"
            android:layout_below="@id/btn_create"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Already have an Account !"
            android:textSize="18dp"
            android:layout_centerHorizontal="true"/>

    </RelativeLayout>
</RelativeLayout>